<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/problemDescription"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:padding="10dp"
                android:text="#include &lt;stdio.h&gt; \n if(     (1번)      )" />

            <Button
                android:id="@+id/problem_description_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:text="1번"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/login_reg_btn"
                app:layout_constraintTop_toBottomOf="@+id/login_bg" />

            <Button
                android:id="@+id/problem_description_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:text="2번"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/login_reg_btn"
                app:layout_constraintTop_toBottomOf="@+id/login_bg" />

            <Button
                android:id="@+id/problem_description_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:text="3번"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/login_reg_btn"
                app:layout_constraintTop_toBottomOf="@+id/login_bg" />

            <Button
                android:id="@+id/problem_description_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:text="4번"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/login_reg_btn"
                app:layout_constraintTop_toBottomOf="@+id/login_bg" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>